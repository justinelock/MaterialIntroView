<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_radio_layout"
    android:layout_width="@dimen/item_card_width"
    android:layout_height="@dimen/item_card_height"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/cover_photo"
        android:layout_width="@dimen/item_card_width"
        android:layout_height="@dimen/item_card_width"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/radio_info_layout"
        android:layout_width="@dimen/item_card_width"
        android:layout_height="@dimen/item_card_height"
        android:layout_below="@+id/cover_photo"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/text_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/cover_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/singer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover_name"
                android:layout_alignParentBottom="true"
                android:text="@string/app_name"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>